<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/transaction_image_view"
        android:layout_weight="1"
        />

    <LinearLayout
        android:id="@+id/transaction_names_linear_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/mOwner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PERSON PERSON"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/mBorrower"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PERSON PERSON"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/transaction_info_linear_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/mDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="DATE DATE"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/mObject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="OBJECT OBJECT"
            android:layout_weight="2"/>

    </LinearLayout>


    <ImageButton
        android:id="@+id/mButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>
