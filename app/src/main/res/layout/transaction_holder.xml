<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:background="@drawable/transactionholder"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/transaction_image_view"
        android:layout_weight="1"
        />

    <LinearLayout
        android:id="@+id/transaction_names_linear_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/mOwner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:text="PERSON PERSON"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/mBorrower"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="PERSON PERSON"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/transaction_info_linear_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/mDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="23sp"
            android:paddingBottom="20dp"
            android:text="DATE DATE"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/mObject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="OBJECT OBJECT"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
